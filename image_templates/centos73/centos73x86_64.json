{
  "description":"CentOS7.3 x86_64 minimal for Packer",
  "min_packer_version":"1.0.0",
  "builders":
  [
    {
      "vm_name": "{{ user `vmname` }}",
      "type": "qemu",
      "iso_url": "{{ user `isourl` }}",
      "iso_checksum": "d2ec6cfa7cf6d89e484aa2d9f830517c",
      "iso_checksum_type": "md5",
      "output_directory": "{{ user `outdir` }}",
      "shutdown_command": "shutdown -P now",
      "disk_size": 40960,
      "format": "qcow2",
      "qemuargs": [
        ["-m", "2048"],
        ["-smp", "2"]
      ],
      "headless": true,
      "accelerator": "kvm",
      "http_directory": "httpdir",
      "ssh_username": "root",
      "ssh_password": "Lc13yfwpW",
      "ssh_port": 22,
      "ssh_wait_timeout": "60m",
      "vnc_bind_address": "0.0.0.0",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_compression": true,
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/sshd.sh",
        "scripts/cloudinit.sh",
        "scripts/qga.sh"
      ],
      "type": "shell"
    }
  ]
}
